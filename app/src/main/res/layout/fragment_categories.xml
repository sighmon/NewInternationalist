<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context="au.com.newint.newinternationalist.CategoriesActivity.CategoriesFragment"
    android:orientation="horizontal">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/categories_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/categories_no_items_padding"
        android:gravity="center"
        android:textSize="@dimen/categories_no_items_text_size"
        android:text="@string/categories_no_items" />

</LinearLayout>
