<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="2">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center">

        <ImageView
            android:id="@+id/home_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_cover_margin_top"
            android:layout_marginBottom="@dimen/home_cover_margin_bottom"
            app:srcCompat="@drawable/home_cover"
            android:contentDescription="@string/home_cover" />

        <ProgressBar
            android:id="@+id/home_cover_loading_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/home_cover"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/home_cover_loading_spinner_margin_bottom"
             />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_menus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/home_linear_layout_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/home_magazine_archive"
                android:text="@string/home_magazine_archive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/home_button_font_size"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/home_categories"
                android:text="@string/home_categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/home_button_font_size"
                android:textAllCaps="false"/>

        </LinearLayout>

        <Button
            android:id="@+id/home_subscribe"
            android:text="@string/home_subscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/home_button_font_size"
            android:layout_below="@+id/home_linear_layout_block"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/home_login"
            android:text="@string/home_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/home_button_font_size"
            android:layout_below="@id/home_subscribe"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"/>

    </RelativeLayout>

</LinearLayout>
