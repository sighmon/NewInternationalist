<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal" >

    <ImageView
        android:id="@+id/toc_cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="@dimen/toc_cover_padding"
        android:paddingBottom="@dimen/toc_cover_padding"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/toc_cover_description" />

    <TextView
        android:text="@string/toc_issue_number_date"
        android:id="@+id/toc_issue_number_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toc_cover" />

</RelativeLayout>
